---
import '@/styles/globals.css';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="flex justify-center m-8">
      <a href="/count-cash">
        <img
          src="/count-cash/mac.png"
          alt="Count the Cash icon"
          class="w-24 h-24"
        />
      </a>
    </header>
    <div class="md:m-16 m-4">
      <slot />
    </div>
    <footer class="flex justify-around p-6">
      <div class="flex flex-col items-center text-sm text-slate-500">
        &copy; 2024 Charles Covar<br /><br />
        <a href="/">charlescovar.com</a>
        <a href="/count-cash/privacy" class="link">Privacy Policy</a>
      </div>
    </footer>
  </body>
</html>
<style is:global>
  .prose {
    max-width: 65ch;
    margin-left: auto;
    margin-right: auto;
  }

  .prose h1 {
    font-size: 2.25rem;
    line-height: 2.5rem;
    margin: 2rem 0;
  }

  .prose h2 {
    font-size: 1.5rem;
    line-height: 2rem;
    margin: 1.5rem 0;
  }
</style>
