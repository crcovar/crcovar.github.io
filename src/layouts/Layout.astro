---
import '@/styles/globals.css';
import TopNav from "../components/TopNav.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <TopNav />
    <slot />
    <footer class="flex justify-around p-6">
      <div class="flex flex-col items-center text-sm text-slate-500">
        &copy; 2024 Charles Covar<br />
        <a href="/">charlescovar.com</a>
      </div>
    </footer>
  </body>
</html>
<style is:global>
  :root {
    --accent: 8, 145, 178;
    --accent-light: 103 232 249;
    --accent-dark: 17, 94, 117;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgba(var(--accent-light)) 30%,
      white 60%
    );
  }

  h1 {
    font-size: xx-large;
    font-weight: 600;
  }
</style>
